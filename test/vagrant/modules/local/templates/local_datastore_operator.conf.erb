[main]
<% if database_type == 'mysql' -%>
dbtype: mysql
<% else -%>
dbtype: postgres
<% end -%>
configstoreurl: <%= config_store_url %>
aging_timeout: 604800
purge_period: 30
default_metrics_period: 300

[postgres]
database: <%= database_name %>
username: localstore
password: <%= postgres_localstore_password %>
host: localhost
port: 5432
poolsize: 10

[mysql]
database: <%= database_name %>
username: localstore
password: <%= mysql_localstore_password %>
host: localhost
port: 3306
poolsize: 10
